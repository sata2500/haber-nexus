# Dockerfile for Worker Service
FROM node:22-alpine

WORKDIR /app

# Install dependencies for sharp (image processing)
RUN apk add --no-cache \
    libc6-compat \
    vips-dev \
    build-base \
    python3

# Copy worker package files
COPY worker/package.json ./
RUN npm install

# Copy worker source code
COPY worker/ ./
COPY drizzle/ ./drizzle/

# Run the worker
CMD ["node", "index.js"]
